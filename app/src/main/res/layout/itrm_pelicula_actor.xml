<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_marginHorizontal="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPeliculaActor"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvPeliculaActoNombrer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivActor"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@+id/ivPeliculaActor"
            android:layout_alignLeft="@id/ivPeliculaActor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPeliculaActoNombrer"
            android:layout_marginTop="5dp"
            android:id="@+id/PeliculaActorNombrePersonaje"
            android:layout_alignRight="@+id/ivPeliculaActor"
            android:layout_alignLeft="@id/ivPeliculaActor"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>